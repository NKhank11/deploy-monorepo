{
  "version": 2,
  "projects": [
    {
      "name": "backend",
      "framework": "other",
      "builds": [
        {
          "src": "apps/backend/src/main.ts",
          "use": "@vercel/node"
        }
      ],
      "routes": [
        {
          "src": "/api/(.*)",
          "dest": "apps/backend/src/main.ts"
        }
      ],
      "root": "apps/backend",
      "outputDirectory": "apps/backend/dist"
    },
    {
      "name": "frontend",
      "framework": "other",
      "builds": [
        {
          "src": "apps/frontend/package.json",
          "use": "@vercel/static-build",
          "config": { "distDir": "apps/frontend/web-build" }
        }
      ],
      "routes": [
        { "src": "/(.*)", "dest": "/apps/frontend/web-build/index.html" }
      ],
      "root": "apps/frontend",
      "outputDirectory": "apps/frontend/web-build"
    }
  ],
  "installCommand": "npm install",
  "buildCommand": "turbo run build"
}